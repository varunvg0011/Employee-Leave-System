@{
    Layout = null;
}

@model IEnumerable<Employee_leave_system.Models.AppliedEmployeeLeaves> 

<div style="background-color:lavender">
    <h2 style="text-align:center">Below are all the leave requests that you have applied.</h2>

    <div class=container>
        <div class="row justify-content-around">
            <div class="col-3" style="display:contents">
                @{
                    foreach (var empLeaveRow in Model)
                    {
                        <div class="card" style="width: 20rem; background-color:beige; align-items:center">
                          <div class="card-body">
                            <h5 class="card-title">Leave request:</h5>
                            <div>     
                                <div id="empUserID" >
                                    <b>Employee Id: </b>@empLeaveRow.UserId
                                </div>
                                <div id="TypeOfLeave">
                                    <b>Type Of Leave: </b>@empLeaveRow.TypeOfLeave                                   
                                </div>
                                <div>
                                    <b>Description: </b>@empLeaveRow.Description
                                </div>
                                 <div>
                                    <b>Status: </b>@empLeaveRow.Status
                                 </div>
                                 <div>
                                    <b>DateOfApplication: </b>@empLeaveRow.DateOfApplication.ToString().Split(" ")[0]
                                 </div>
                                 <div id= "FromDate">
                                    <b>Leave From: </b>@empLeaveRow.LeaveFromDt.ToString().Split(" ")[0]
                                 </div>
                                 <div id="ToDate">
                                    <b>Leave To: </b>@empLeaveRow.LeaveToDt.ToString().Split(" ")[0]
                                 </div>
                                                                                        
                            </div>
                          </div>
                            
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <br />
    <br />
    

</div>


